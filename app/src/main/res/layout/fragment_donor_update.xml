<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="235dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="orphanage_name"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="214dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:text="orphanage"
        android:textColor="#88B1FC"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="186dp" />

    <LinearLayout
        android:id="@+id/grey_box_1"
        android:layout_width="415dp"
        android:layout_height="57dp"
        android:layout_margin="16dp"
        android:layout_marginBottom="1dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/grey_box_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/grey_box_2"
        android:layout_width="414dp"
        android:layout_height="57dp"
        android:layout_margin="16dp"
        android:background="#D3D3D3"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="332dp">

    </LinearLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="@+id/grey_box_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.096"
        app:shapeAppearanceOverlay="@style/CircleImageView"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="         Update-2"
        android:textAlignment="viewStart"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="286dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Orphanage Updates"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="245dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="256dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="         Update-1"
        android:textAlignment="viewStart"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="428dp" />

    <LinearLayout
        android:id="@+id/grey_box_3"
        android:layout_width="414dp"
        android:layout_height="57dp"
        android:layout_margin="16dp"
        android:background="#FFFFFF"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="343dp" />

    <LinearLayout
        android:id="@+id/grey_box_4"
        android:layout_width="414dp"
        android:layout_height="57dp"
        android:layout_margin="16dp"
        android:background="#D3D3D3"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="400dp">

    <LinearLayout
        android:id="@+id/grey_box_5"
        android:layout_width="414dp"
        android:layout_height="57dp"
        android:layout_margin="16dp"
        android:background="#FFFFFF"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="457dp" />

    <LinearLayout
        android:id="@+id/grey_box_6"
        android:layout_width="414dp"
        android:layout_height="57dp"
        android:layout_margin="16dp"
        android:background="#D3D3D3"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="514dp" />

    <LinearLayout
        android:id="@+id/grey_box_7"
        android:layout_width="414dp"
        android:layout_height="57dp"
        android:layout_margin="16dp"
        android:background="#FFFFFF"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="571dp" />


</androidx.constraintlayout.widget.ConstraintLayout>